<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="rs.os.checklist"
      android:versionCode="2"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="6" />
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application android:icon="@drawable/checklist" android:label="@string/app_name">
      
        <activity android:name="ChecklistActivity"
                  android:label="@string/checklists">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="ItemListCheckActivity"
                  android:label="@string/items">
        </activity>
      
        <activity android:name="ItemListEditActivity"
                  android:label="@string/editItems">
        </activity>
        
        <activity android:name="CategoryListEditActivity"
                  android:label="@string/categories">
        </activity>
        
        <activity android:name=".CategoryEditorActivity"
                  android:label="@string/edit_category">
        </activity>
        
        <activity android:name="SubjectEditorActivity"
                  android:label="@string/edit_subject">
        </activity>
        
        <activity android:name="ChecklistEditorActivity"
                  android:label="@string/edit_checklist">
        </activity>
        
        <activity android:name=".GalleryActivity"
                  android:label="@string/select_image">
        </activity>
        
        <activity android:name=".EmailActivity"
                  android:label="@string/app_name">
        </activity>

    </application>
</manifest>